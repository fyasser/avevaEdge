# AvevaEdge Dashboard - Render Deployment Environment Variables

# Database Configuration
DB_USER=Edge
DB_PASSWORD=F'yabdellah2025
DB_SERVER=your-public-ip-or-domain  # Replace with your actual SQL Server address
DB_NAME=simulationDB
DB_INSTANCE=SQLEXPRESS
DB_PORT=1433  # Default SQL Server port

# SQL Server Connection Options
DB_ENCRYPT=false  # Set to true if using SSL/TLS
DB_TRUST_SERVER_CERTIFICATE=true
DB_ENABLE_ARITH_ABORT=true
DB_CONNECT_TIMEOUT=60000
DB_REQUEST_TIMEOUT=60000

# Connection Pool Settings
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_IDLE_TIMEOUT=30000

# Application Settings
NODE_ENV=production
PORT=10000  # Render will override this, but good to have as fallback

# CORS Settings
CORS_ORIGIN=https://avevaedge-frontend.onrender.com  # Replace with your frontend URL

# Socket.IO Settings
SOCKET_CORS_ORIGIN=https://avevaedge-frontend.onrender.com  # Replace with your frontend URL
SOCKET_METHODS=GET,POST

# Simulation Mode (set to false in production with real DB)
USE_DB_SIMULATOR=false

# Python Settings (for report generation)
PYTHON_PATH=python3
